<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請輸入身高(m)"
        android:id="@+id/text_height" />
    <EditText
        android:layout_below="@+id/text_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_Height"/>
    <TextView
        android:layout_below="@+id/input_Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請輸入體重(kg)"
        android:id="@+id/text_weight" />
    <EditText
        android:layout_below="@+id/text_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_Weight"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="計算BMI"
        android:id="@+id/button_countBMI"
        android:layout_below="@+id/input_Weight"
        android:layout_alignRight="@+id/text_height"
        android:layout_alignEnd="@+id/text_height"
        android:background="@drawable/btnbackground"/>
    <TextView
        android:layout_alignRight="@+id/input_Weight"
        android:layout_alignEnd="@+id/input_Weight"
        android:layout_below="@+id/input_Weight"
        android:text="計算結果"
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_countBMI"
        android:text="Check out"
        android:id="@+id/button_connect"/>


</RelativeLayout>
